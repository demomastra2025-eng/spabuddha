# Environment Variables for Docker

# Database (локальная БД в контейнере)
DATABASE_URL=postgresql://postgres:postgres@db:5432/buddha

# Если хотите использовать внешнюю БД (например Railway), раскомментируйте:
# DATABASE_URL=postgresql://postgres:password@external-host:5432/database

# Authentication
NEXTAUTH_SECRET=your-nextauth-secret-here-change-me
JWT_SECRET=your-jwt-secret-here-change-me

# Application
NODE_ENV=production
PORT=3000
APP_BASE_URL=http://localhost:3000
VITE_APP_BASE_URL=http://localhost:3000

# Supabase (опционально)
VITE_SUPABASE_URL=http://127.0.0.1:54321
VITE_SUPABASE_ANON_KEY=replace-with-anon-key

# Wazzup API
WAZZUP_API_URL=https://api.wazzup24.com/v3

# OneVision Payment API
ONEVISION_API_URL=https://api.paysage.kz/
ONEVISION_PAYMENT_LIFETIME=3600

# Email - Resend
RESEND_API_KEY=
RESEND_FROM=no-reply@buddhaspa.kz

# Email - SMTP (альтернатива Resend)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=no-reply@buddhaspa.kz

# Ngrok (не нужен для Docker)
NGROK_AUTHTOKEN=

